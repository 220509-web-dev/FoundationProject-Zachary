<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>FoundationProject</display-name>
    
    <welcome-file-list>
        <welcome-file>Register.html</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>test-context-key</param-name>
        <param-value>test-context-value</param-value>
    </context-param>

    <servlet>
        <servlet-name>SanityServlets</servlet-name>
        <servlet-class>dev.cooremans.servlets.SanityServlets</servlet-class>

        <init-param>
            <param-name>test-init-key</param-name>
            <param-value>test-init-value</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>

    </servlet>


    <servlet-mapping>
        <servlet-name>SanityServlets</servlet-name>
        <url-pattern>/sanity</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>dev.cooremans.utils.ContextLoaderListener</listener-class>
    </listener>

</web-app>